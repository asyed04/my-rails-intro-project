<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "My Rails Intro Project" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav>
      <ul>
        <li class="<%= 'active' if current_page?(root_path) %>"><a href="<%= root_path %>">Home</a></li>
        <li class="<%= 'active' if current_page?(about_path) %>"><a href="<%= about_path %>">About</a></li>
        <li class="<%= 'active' if current_page?(leagues_path) %>"><a href="<%= leagues_path %>">Leagues</a></li>
        <li class="<%= 'active' if current_page?(teams_path) %>"><a href="<%= teams_path %>">Teams</a></li>
        <li class="<%= 'active' if current_page?(players_path) %>"><a href="<%= players_path %>">Players</a></li>
      </ul>
    </nav>
    <hr>

    <%= yield %>
  </body>
</html>
